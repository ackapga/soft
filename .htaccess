RewriteEngine on
RewriteCond %{HTTPS} !=on
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]
RewriteBase /
RewriteCond %{REQUEST_METHOD} !=POST
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /([^?]*)\.(php|html)(\?.*)?\ HTTP/
RewriteRule .? /%1 [R,L,QSA]
RewriteCond %{REQUEST_FILENAME} !-f
   RewriteCond %{REQUEST_FILENAME} !-d
   RewriteCond %{REQUEST_FILENAME}.php -f
   RewriteRule .? %{REQUEST_FILENAME}.php [L,QSA]
   RewriteCond %{REQUEST_FILENAME} !-f
   RewriteCond %{REQUEST_FILENAME} !-d
   RewriteCond %{REQUEST_FILENAME}.html -f
   RewriteRule .? %{REQUEST_FILENAME}.html [L,QSA]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !\..+$
RewriteCond %{REQUEST_URI} !/$
RewriteRule ^(.*)$ https://softgroup.kz/$1/ [L,R=301]
   ErrorDocument 404 https://softgroup.kz/err404.html
 <ifModule mod_expires.c>

 ExpiresActive On
 ExpiresByType image/jpg "access plus 0 days"
 ExpiresByType image/svg+xml "access plus 0 days"
 ExpiresByType image/gif "access plus 0 days"
 ExpiresByType image/jpeg "access plus 0 days"
 ExpiresByType image/png "access plus 0 days"
 ExpiresByType text/css "access plus 0 days"
 ExpiresByType text/javascript "access plus 0 days"
 ExpiresByType application/javascript "access plus 0 days"
 ExpiresByType application/x-javascript "access plus 0 days"
</ifModule>